<div class="row ">
    <div class="col-12"><h1 class="text-center text-white m-3"><b>My links</b></h1></div>
    <div class="col col-md-6 col-lg-4 mx-auto ">
        <div class="card p-0 ">
            <div class="text-center  card-header">
                <h3>Signup</h3>
            </div>
            <div class="card-body">
                <form action="/signup" method="POST">
                    <div class="form-group mt-3">
                        <label class="ms-1" for="username">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="" >
                    </div>
                    <div class="form-group mt-2">
                        <label class="ms-1" for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="">
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary w-100">
                            Create account
                        </button>
                    </div>
                </form>
                <hr class="dropdown-divider mt-5">
                <p class="text-center ">
                    <span>Already have an account</span>
                    <a href="/signin">Login</a>
                </p>

            </div>
        </div>
    </div>

</div>