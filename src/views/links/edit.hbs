<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 ">
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title mt-3 text-secondary text-center">Edit link</h5>
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group mt-4">
                            <input type="text" value="{{link.title}}" class="form-control" name="title"
                                placeholder="Titulo" autofocus>
                        </div>
                        <div class="form-group mt-3">
                            <input type="url" value="{{link.url}}" class="form-control" name="url" placeholder="Url">
                        </div>
                        <div class="form-group mt-3">
                            <textarea class="form-control" rows="4" maxlength="150" name="description"
                                placeholder="Descripcion">{{link.description}}</textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mt-3">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>