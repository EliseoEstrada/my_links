<div class="container">
    <div class="row ">
        {{#each links}}

        <div class="col col-12 col-md-4 col-lg-3 mt-3 d-flex align-items-stretch">
            <div class="card text-center w-100">
                <div class="card-body">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title">
                            {{title}}
                        </h3>
                    </a>
                    <p class="mt-3">
                        {{description}}
                    </p>
                    <p class="text-secondary">
                        {{timeago create_at}}
                    </p>
                    
                    <a href="/links/edit/{{id}}" class="btn btn-secondary w-100 mt-2">Edit link</a>
                    <a href="/links/delete/{{id}}" class="btn btn-danger w-100 mt-2"><i class="fas fa-trash-alt"></i></a>
                </div>
            </div>
        </div>

        {{else}}
        <div class="col-md-4 mx-auto mt-5">
            <div class="card card-body text-center">
                <p>There are not links saved</p>
                <a href="/links/add">Create one</a>
            </div>
        </div>

        {{/each}}
    </div>
</div>